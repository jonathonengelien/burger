<img src="../public/assets/images/burger-image.jpg" alt="Burger Image">

<h1>Eat Da Burger!</h1>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{burgers devour=false}}
    {{/unless}}
  {{/each}}
</ul>

<button>Devour It!</button>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{burgers devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger-name">Burger Name:</label>
    <input type="text" id="burger-name" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
